; exec = ~/.config/polybar/scripts/check-all-updates.sh
exec = checkupdates | wc -l
interval = 1000
label = Arch: %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "  "
format-prefix-foreground = #fefefe
; format-underline = #00b52a
; }}}

; module/aur-updates --------------------------------------------------------------{{{
